---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
// Importamos todos los posts
import FirstPost from './blog/first-post.astro';

// Lista de posts (puedes cargar esta lista desde un archivo o base de datos)
const posts = [
  {
    href: '/blog/first-post',
    title: 'Navigating the Digital Age',
    body: 'Critical Thinking and Media Literacy: Navigating the Digital Age'
  },
  {
    href: '/blog/second-post',
    title: 'The Evolution of Justice',
    body: 'Crime and Punishment: The Evolution of Justice'
  },
  
  // Agrega más posts aquí
];
---

<Layout title="Welcome to My Blog">
  <main>
	<h1>Kose's Insight</h1>
    <h2>Latest Posts</h2>
    <div class="card-grid">
      {posts.map(post => (
        <Card
          href={post.href}
          title={post.title}
          body={post.body}
        />
      ))}
    </div>
  </main>
</Layout>

<style>
  :root {
  --primary-color: #fff;
  --background-color: #13151a;
  --accent-color: #f33939;
  --accent-light: #a1a099;
  --accent-dark: #310a65;
  --font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

main {
  margin: auto;
  padding: 1rem;
  width: 90%;
  max-width: 1000px;
  color: var(--primary-color);
  font-family: var(--font-family);
  font-size: 1.125rem; /* 18px */
  line-height: 1.6;
  background: var(--background-color);
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

h1 {
  font-size: 2.5rem; /* 40px */
  font-weight: 700;
  line-height: 1.2;
  text-align: center;
  color: var(--accent-color);
  margin-bottom: 1em;
}

h2 {
  font-size: 1.75rem; /* 28px */
  font-weight: 600;
  color: var(--accent-light);
  margin-bottom: 1em;
  text-align: left;
}

.card-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* Tres columnas */
  gap: 1rem; /* Espaciado entre tarjetas */
}

.card {
  background: var(--background-color);
  padding: 1rem;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2), 0 10px 20px rgba(0, 0, 0, 0.1); /* Efecto de sombra 3D */
  transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease; /* Transiciones suaves */
  position: relative;
  overflow: hidden;
  z-index: 1; /* Asegura que los efectos se muestren correctamente */
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.3), transparent 70%);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1; /* Coloca el efecto de resplandor detrás del contenido */
}

.card:hover {
  transform: translateY(-10px) scale(1.05) rotate(1deg); /* Efecto de elevación, escala y rotación sutil */
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2), 0 20px 40px rgba(0, 0, 0, 0.15); /* Sombra más intensa al hacer hover */
  background: linear-gradient(145deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.1)); /* Fondo dinámico al hacer hover */
}

.card:hover::before {
  opacity: 1; /* Mostrar efecto de iluminación en hover */
}

.card-link {
  text-decoration: none;
  color: var(--primary-color);
  transition: color 0.3s ease, text-shadow 0.3s ease; /* Transiciones suaves en el color y la sombra del texto */
}

.card-link:hover {
  color: var(--accent-light);
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3); /* Efecto de sombra en texto al hacer hover */
}

</style>
